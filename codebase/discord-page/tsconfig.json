{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es6",
        "pretty": true,
        "strict": true,
        "outDir": "./dist",
        "declaration": true,
        "removeComments": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}